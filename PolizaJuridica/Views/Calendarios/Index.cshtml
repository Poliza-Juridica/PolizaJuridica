@model IEnumerable<PolizaJuridica.Data.Calendario>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-icon" data-background-color="red">
                <i class="material-icons">perm_identity</i>
            </div>
            <div class="card-content">
                @if (@ViewBag.TipoRegimen == 1)
                {
                    <h4 class="card-title">Seguimiento de Solicitud Persona Fisica</h4>
                }
                @if (@ViewBag.TipoRegimen == 2)
                {
                    <h4 class="card-title">Seguimiento de Solicitud Persona Moral</h4>
                }
                <div>
                    <div class="card">
                        <div class="card-header card-header-tabs" data-background-color="red">
                            <div class="nav-tabs-navigation">
                                <div class="nav-tabs-wrapper">
                                    <span class="nav-tabs-title">Datos:</span>
                                    <ul class="nav nav-tabs" data-tabs="tabs">
                                        @if (@ViewBag.TipoRegimen == 1)
                                        {
                                            <li class="">
                                                @Html.ActionLink("Persona Fisica", "Edit", "FisicaMorals", new { id = ViewBag.Id })
                                            </li>
                                            <li class="">
                                                @Html.ActionLink("Referencias de Arrendamiento", "Edit", "RefArrendamientoes", new { id = ViewBag.Id })
                                            </li>
                                            <li class="">
                                                @Html.ActionLink("Referencias de Personales", "Index", "ReferenciaPersonals", new { id = ViewBag.Id })
                                            </li>
                                            <li class="">
                                                @Html.ActionLink("Personas que Ocuparan el Inmueble", "Index", "PersonasOcupanInms", new { id = ViewBag.Id })
                                            </li>
                                            <li class="">
                                                @Html.ActionLink("Documentos", "Index", "Documentos", new { id = ViewBag.Id })
                                            </li>
                                            @if (ViewBag.fiador = true)
                                            {
                                                <li class="">
                                                    @Html.ActionLink("Fiador (Fisíca)", "Index", "FiadorFs", new { id = ViewBag.Id })
                                                </li>
                                                <li class="">
                                                    @Html.ActionLink("Fiador (Moral)", "Index", "FiadorMs", new { id = ViewBag.Id })
                                                </li>

                                            }
                                            <li class="">
                                                @Html.ActionLink("Generar Contrato", "VistaPrevia", "GenerarContrato", new { id = ViewBag.Id })
                                            </li>
                                            <li class="active">
                                                <a href="#1" data-toggle="tab">
                                                    <i class="material-icons">bug_report</i>
                                                    Calendario
                                                    <div class="ripple-container"></div>
                                                </a>
                                            </li>
                                        }
                                        @if (@ViewBag.TipoRegimen == 2)
                                        {
                                            <li class="">
                                                @Html.ActionLink("Persona Moral", "Edit", "FisicaMorals", new { id = ViewBag.Id })
                                            </li>
                                            <li class="">
                                                @Html.ActionLink("Referencias de Arrendamiento", "Edit", "RefArrendamientoes", new { id = ViewBag.Id })
                                            </li>
                                            <li class="">
                                                @Html.ActionLink("Referencias Comerciales", "Index", "ReferenciaComercials", new { id = ViewBag.Id })
                                            </li>
                                            <li class="">
                                                @Html.ActionLink("Documentos", "Index", "Documentos", new { id = ViewBag.Id })
                                            </li>
                                            @if (ViewBag.fiador = true)
                                            {
                                                <li class="">
                                                    @Html.ActionLink("Fiador (Fisíca)", "Index", "FiadorFs", new { id = ViewBag.Id })
                                                </li>
                                                <li class="">
                                                    @Html.ActionLink("Fiador (Moral)", "Index", "FiadorMs", new { id = ViewBag.Id })
                                                </li>

                                            }
                                            <li class="">
                                                @Html.ActionLink("Generar Contrato", "VistaPrevia", "GenerarContrato", new { id = ViewBag.Id })
                                            </li>
                                            <li class="active">
                                                <a href="#1" data-toggle="tab">
                                                    <i class="material-icons">bug_report</i>
                                                    Calendario
                                                    <div class="ripple-container"></div>
                                                </a>
                                            </li>

                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="card-content">
                            <div class="tab-content">
                                <!--Inicio de Secccion 1-->
                                <div class="tab-pane active" id="2">
                                    <!--INICIO Seccion dentro del tab-->
                                    <div class="row">
                                        <div class="col-md-12">
                                            <h4 class="card-title">Listado fechas para firma</h4>
                                            <div class="toolbar">
                                                <a href="" data-toggle="modal" data-target="#Create" class="pull-right">Nuevo fecha para firma</a>
                                            </div>
                                            <div class="material-datatables">
                                                <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                                    <thead>
                                                        <tr>
                                                            <th>
                                                                Fecha
                                                            </th>
                                                            <th>
                                                                Ubicación
                                                            </th>
                                                            <th>
                                                                Estatus
                                                            </th>
                                                            <th>
                                                                Descripción
                                                            </th>
                                                            <th>
                                                                Usuario
                                                            </th>
                                                            <th class="disabled-sorting text-right">Acciones</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.CalendarioFechaFirma)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.CalendarioUbicacion)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.CalendarioEstatus)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.CalendarioDescripcion)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Usuarios.UsuarioNombre)
                                                                </td>
                                                                <td>
                                                                    <a href="" data-toggle="modal" data-target="#Delete" class="pull-right" onclick="getDataAjax('@item.CalendarioId','Calendarios/EditAjax')"><i class="material-icons">close</i></a>
                                                                    <a href="" data-toggle="modal" data-target="#Edit" class="pull-right" onclick="getDataEditAjax('@item.CalendarioId','Calendarios/EditAjax')"><i class="material-icons">edit</i></a>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        <!-- end col-md-12 -->
                                    </div>
                                    <!--FIN Seccion dentro del tab-->
                                    <div class="form-group">
                                        <a asp-controller="GenerarContrato" asp-action="VistaPrevia" asp-route-id="@ViewBag.Id" class="btn btn-default pull-left">Atrás</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--Fin de Seccion 1-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->
<!--Seccion de Modal-->
<!-- Modal -->
<!--Create-->
<div class="modal fade" id="Create" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Crear fecha firma</h4>
            </div>
            <div class="modal-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" hidden>
                        <input for="CalendarioId" name="CalendarioId" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label for="CalendarioFechaFirma" class="control-label">Fecha</label>
                        <input for="CalendarioFechaFirma" type="datetime" name="CalendarioFechaFirma" class="form-control datetimepicker" />

                    </div>
                    <div class="form-group">
                        <label for="CalendarioUbicación" class="control-label">Ubicación</label>
                        <input for="CalendarioUbicación" name="CalendarioUbicación" class="form-control" />

                    </div>
                    <div class="form-group" hidden>
                        <label for="CalendarioEstatus" class="control-label">Estatus</label>
                        <input for="CalendarioEstatus" name="CalendarioEstatus" class="form-control" value="En proceso" />
                    </div>
                    <div class="form-group">
                        <label for="CalendarioDescripcion" class="control-label">Descripción</label>
                        <input for="CalendarioDescripcion" name="CalendarioDescripcion" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Tipo de Referencia Comercial</label>
                        <select name="UsuariosId" class="form-control" asp-items="ViewBag.UsuarioNombre"></select>
                    </div>
                    <div class="form-group" hidden>
                        <label for="FisicaMoralId" class="control-label"></label>
                        <input for="FisicaMoralId" name="FisicaMoralId" value="@ViewBag.id" class="form-control" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="setDataAdd('Calendarios/Insertar')">Guardar</button>
            </div>
        </div>
    </div>
</div>
<!--Fin Create-->
<!--Edit-->

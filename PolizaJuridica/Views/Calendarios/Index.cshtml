@section Scripts
    {
    <script type="text/javascript">
        $(document).ready(function () {
            //Datepicker seccion
            $('.datetimepicker').datetimepicker({
                format: 'DD/MM/YYYY',
                icons:
                    {
                        Default: false,
                        time: "fa fa-clock-o",
                        date: "fa fa-calendar",
                        up: "fa fa-chevron-up",
                        down: "fa fa-chevron-down",
                        previous: 'fa fa-chevron-left',
                        next: 'fa fa-chevron-right',
                        today: 'fa fa-screenshot',
                        clear: 'fa fa-trash',
                        close: 'fa fa-remove',
                        inline: true
                    }
            });


            $('#datatables').DataTable({
                "pagingType": "full_numbers",
                "lengthMenu": [
                    [10, 25, 50, -1],
                    [10, 25, 50, "All"]
                ],
                responsive: true,
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Buscar",
                }

            });


            var table = $('#datatables').DataTable();

            // Edit record
            table.on('click', '.edit', function () {
                $tr = $(this).closest('tr');

                var data = table.row($tr).data();
                alert('You press on Row: ' + data[0] + ' ' + data[1] + ' ' + data[2] + '\'s row.');
            });

            // Delete a record
            table.on('click', '.remove', function (e) {
                $tr = $(this).closest('tr');
                table.row($tr).remove().draw();
                e.preventDefault();
            });

            //Like record
            table.on('click', '.like', function () {
                alert('You clicked on Like button');
            });

            $('.card .material-datatables label').addClass('form-group');
        });
        $('#myModal').on('shown.bs.modal', function () {
            $('#myInput').focus()
        })
        var item;
        var CalendarioId;
        var CalendarioFechaFirma;
        var CalendarioUbicación;
        var CalendarioEstatus;
        var CalendarioDescripcion;
        var UsuariosId;
        var FisicaMoralId = @ViewBag.Id;

        /*Insertamos un registro*/
        function setDataAdd(action) {

            CalendarioId = $('input[name=CalendarioId')[0].value;
            CalendarioFechaFirma = $('input[name=CalendarioFechaFirma')[0].value;
            CalendarioUbicación = $('input[name=CalendarioUbicación')[0].value;
            CalendarioEstatus = $('input[name=CalendarioEstatus')[0].value;
            CalendarioDescripcion = $('input[name=CalendarioDescripcion')[0].value;
            UsuariosId = $('select[name=UsuariosId]').val();      
            $.ajax({
                type: "POST",
                url: "../../" + action,
                data: {
                    CalendarioId, CalendarioFechaFirma, CalendarioUbicación, CalendarioEstatus, CalendarioDescripcion, FisicaMoralId, UsuariosId
                },
                success: function (response) {
                    if (response == "Save") {
                        window.location.reload(true);
                    }
                    else {
                        //Mesaje de error
                        $.notify({
                            icon: "notifications",
                            message: "Error," + response

                        }, {
                                type: danger[red],
                                timer: 3000,
                                placement: {
                                    from: top,
                                    align: right
                                }
                            });
                    }
                }
            });
        }

        function getDataAjax(id, action) {

            $.ajax({
                type: "POST",
                url: "../../" + action,
                data: { id },
                success: function (response) {
                    console.log(response);
                    onSuccess(response);
                }
            });
        }
        function onSuccess(response) {
            item = response;
            $.each(item, function (idex, valor) {
                $('input[name=CalendarioId').val(valor.calendarioId);
                $('input[name=CalendarioFechaFirma').val(valor.calendarioFechaFirma);
                $('input[name=CalendarioUbicación').val(valor.calendarioUbicación);
                $('input[name=CalendarioEstatus').val(valor.calendarioEstatus);
                $('input[name=CalendarioDescripcion').val(valor.calendarioDescripcion);
                $('input[name=FisicaMoralId').val(valor.fisicaMoralId);
                $('select[name=UsuariosId]').val(valor.usuariosId);
            });
        }
        function getDataEditAjax(id, action) {

            $.ajax({
                type: "POST",
                url: "../../" + action,
                data: { id },
                success: function (response) {
                    console.log(response);
                    onSuccessEdit(response);
                }
            });
        }
        function onSuccessEdit(response) {
            item = response;
            $.each(item, function (idex, valor) {
                $('input[name=CalendarioIdEdit').val(valor.calendarioId);
                $('input[name=CalendarioFechaFirmaEdit').val(valor.calendarioFechaFirma);
                $('input[name=CalendarioUbicaciónEdit').val(valor.calendarioUbicación);
                $('select[name=CalendarioEstatusEdit]').val(valor.calendarioEstatus);
                $('input[name=CalendarioDescripcionEdit').val(valor.calendarioDescripcion);
                $('input[name=FisicaMoralIdEdit').val(valor.fisicaMoralId);
                $('select[name=UsuariosIdEdit]').val(valor.usuariosId);
            });
        }
        /*Modificamos Fiador*/
        function setEdit(action) {

            CalendarioId = $('input[name=CalendarioIdEdit')[0].value;
            CalendarioFechaFirma = $('input[name=CalendarioFechaFirmaEdit')[0].value;
            CalendarioUbicación = $('input[name=CalendarioUbicaciónEdit')[0].value;
            CalendarioEstatus = $('select[name=CalendarioEstatusEdit').val();
            CalendarioDescripcion = $('input[name=CalendarioDescripcionEdit')[0].value;
            UsuariosId = $('select[name=UsuariosIdEdit]').val();

            $.ajax({
                type: "POST",
                url: "../../" + action,
                data: {
                    CalendarioId, CalendarioFechaFirma, CalendarioUbicación, CalendarioEstatus, CalendarioDescripcion, FisicaMoralId, UsuariosId
                },
                success: function (response) {
                    if (response == "Save") {
                        window.location.reload(true);
                    }
                    else {
                        //Mesaje de error
                        $.notify({
                            icon: "notifications",
                            message: "Error," + response

                        }, {
                                type: danger[red],
                                timer: 3000,
                                placement: {
                                    from: top,
                                    align: right
                                }
                            });
                    }
                }
            });
        }
        /*Eliminamos*/
        function setDataDeleteFiadorF(action) {

            id = $('input[name=CalendarioId')[0].value;

            $.ajax({
                type: "POST",
                url: "../../" + action,
                data: {
                    id
                },
                success: function (response) {
                    if (response == "Save") {
                        swal({
                            title: 'Eliminado!',
                            text: 'Su registro ha sido eliminado.',
                            type: 'success',
                            confirmButtonClass: "btn btn-success",
                            buttonsStyling: false
                        })
                        setTimeout(function () {
                            window.location.reload(true);
                        }, 2000);
                    }
                    else {
                        //Mesaje de error
                        $.notify({
                            icon: "notifications",
                            message: "Error," + response

                        }, {
                                type: danger[red],
                                timer: 3000,
                                placement: {
                                    from: top,
                                    align: right
                                }
                            });
                    }
                }
            });
        }
        function MensajeError() {
            swal({
                title: '¿Estas Seguro?',
                text: "Se eliminara de forma permanente",
                type: 'warning',
                showCancelButton: true,
                confirmButtonClass: 'btn btn-success',
                cancelButtonClass: 'btn btn-danger',
                confirmButtonText: 'Si, Eliminarlo!',
                buttonsStyling: false
            }).then(function () {
                setDataDeleteFiadorF('Calendarios/DeleteConfirmed');
            });


        }</script>
}

@model PolizaJuridica.Data.CentroCostos


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>CentroCostos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CentroCostosId" />
            <div class="form-group">
                <label class="control-label">Tipo de Póliza</label>
                <input asp-for="CentroCostosTipo" class="form-control" />
                <span asp-validation-for="CentroCostosTipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Costo de la Póliza</label>
                <input asp-for="CentroCostosMonto" class="form-control" />
                <span asp-validation-for="CentroCostosMonto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Monto de la Renta Inicial</label>
                <input asp-for="CentroCostosRentaInicial" class="form-control" />
                <span asp-validation-for="CentroCostosRentaInicial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Monto de la Renta Final</label>
                <input asp-for="CentroCostosRentaFinal" class="form-control" />
                <span asp-validation-for="CentroCostosRentaFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>

                                                <li class="">
                                                    @Html.ActionLink("Fiador (P. Fisíca)", "Index", "FiadorFs", new { id = ViewBag.Id })
                                                </li>
                                                <li class="">
                                                    @Html.ActionLink("Fiador (P. Moral)", "Index", "FiadorMs", new { id = ViewBag.Id })
                                                </li>

                                            }
                                        }
                                        @if (@ViewBag.TipoRegimen == "2")
                                        {

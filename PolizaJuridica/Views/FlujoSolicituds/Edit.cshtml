@model PolizaJuridica.Data.FlujoSolicitud

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Id = Model.SolicitudId;
}

<h2>Edit</h2>

<h4>Flujo de la Solicitud</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PersonaId" class="control-label"></label>
                <select asp-for="PersonaId" class="form-control" asp-items="ViewBag.PersonaId"></select>
                <span asp-validation-for="PersonaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaAsignacion" class="control-label"></label>
                <input asp-for="FechaAsignacion" class="form-control" disabled/>
                <span asp-validation-for="FechaAsignacion" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="SolicitudId" class="control-label"></label>
                <input asp-for="SolicitudId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-Id="@Id">Regresar</a>
</div>

